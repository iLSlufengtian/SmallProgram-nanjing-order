}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 40rpx !important;
  height: 34rpx !important;
}

/* 覆盖button样式 */

button.form_button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  display: inline;
  position: static;
  border: 0;
  padding-left: 0;
  padding-right: 0;
  border-radius: 0;
  /* font-size:0rpx; */
  color: transparent;
}

button.form_button::after {
  content: '';
  width: 0;
  height: 0;
  -webkit-transform: scale(1);
  transform: scale(1);
  display: none;
  background-color: transparent;
}

.tip-content-dialog {
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99999;
}

.tip-dialog-view {
  width: 77%;
  height: 60%;
  margin: auto;
  border-radius: 20rpx;
  vertical-align: middle;
  background: #fff;
  /* animation: tanchu 400ms ease-in; */
  position: relative;
}

.tip-dialog-viewTop {
  height: 88rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx;
  border-bottom-style: solid;
  border-bottom-color: #6E6E6E;
}



.tip-dialog-view .tip-dialog-viewScroll {
  padding: 20rpx;
  width: 90%;
  height: 70%;
  /* background: greenyellow */
}

.tip-content-dialog .btn {
  background: #f2f7fa;
}

@keyframes tanchu {
  from {
    transform: scale(0, 0);
    -webkit-transform: scale(0, 0);
  }

  to {
    transform: scale(1, 1);
    -webkit-transform: scale(1, 1);
  }
}

.tip-content-dialog .dialogClose {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.bottom_button {
