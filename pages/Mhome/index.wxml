  <view class="bg">
    <view class="dev-bg" style="margin-top:{{height}}rpx">
      <view class="img">
        <image style="width:130rpx;height:130rpx;" src="{{imgUrl}}" />
      </view>
    </view>
    <text class="appoint">{{device[0].name}}</text>
  </view>

  <!-- <view class="btn-view" style="height:{{globalHeight-480}}rpx"> -->
  <view class="btn-view">
    <view class="btn-container">
      <view class="btn" bindtap="powerOff">
        <image style="width:188rpx;height188rpx;margin-top:184rpx;" src="../../images/device/powerOff.png" />
        <text style="font-size:24rpx;color:#4B5C9C;margin-top:16rpx">断电</text>
      </view>

      <view class="btn" bindtap="powerOn">
        <image style="width:188rpx;height188rpx;margin-top:184rpx;" src="../../images/device/powerOn.png" />
        <text style="font-size:24rpx;color:#6DCFEF;margin-top:16rpx">通电</text>
      </view>

    </view>
    <!-- <image class="me" src="../../images/device/icon.png" bindtap="goToHome" /> -->
      <view style="width:100%;height:110rpx;position:fixed;bottom:0;left:0;display:flex">
    <view style="width:46%;height:80rpx;margin-left:3%;margin-right:2%;border:1rpx solid #1CB2E3;color:#1CB2E3;font-size:30rpx;display:flex;justify-content:center;align-items:center" bindtap="goToHome">
      <text>返回首页</text>
    </view>
    <view style="width:46%;height:80rpx;background:#1CB2E3; border:1rpx solid #1CB2E3;font-size:30rpx;display:flex;justify-content:center;align-items:center" bindtap="goToOrder">
      <text>预约此设备</text>
    </view>
  </view>
